@model IEnumerable<MusicStreamingWeb.Models.Song>
@{
    ViewBag.Title = "AddSongToPlaylist";
}

<h2>AddSongToPlaylist</h2>

@if (Model.Count() > 0)
{
    using (Html.BeginForm("AddSongToPlaylist", "Broadcast", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <select name="id" class="form-control">
        @foreach (var i in Model)
        {
            <option value="@i.Id">@i.Artist - @i.Title</option>
        }
    </select>
    <br />
    <input type="submit" value="Add Song" class="btn btn-primary" />
    }
}
else
{
    <p>You added all songs available. Try to <a href='@Url.Action("Create", "Songs")'>add new songs</a> to system.</p>
}